<Window x:Class="WarGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Button Content="Start Game" Grid.Column="1" HorizontalAlignment="Right" Margin="0,186,352,0" Grid.RowSpan="3" VerticalAlignment="Top" Height="53" Width="133" Click="Button_Click"/>
        <Label Content="War Game" HorizontalAlignment="Left" Margin="205,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="70" Grid.Row="1" Width="327" FontSize="20"/>

    </Grid>
</Window>
